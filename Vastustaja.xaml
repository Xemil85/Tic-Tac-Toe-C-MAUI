<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="final_work.Vastustaja"
             Title="Vastustaja">
    <VerticalStackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <Label Text="Valitse vastustaja" FontSize="30" HorizontalOptions="Center"/>

        <Grid ColumnSpacing="10" HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="Tietokone" WidthRequest="150" Text="Tietokone" Grid.Column="0"/>
            <Button x:Name="ToinenPelaaja" WidthRequest="150" Text="Toinen pelaaja" Grid.Column="1" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>