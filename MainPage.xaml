<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="final_work.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Tervetuloa Ristinollapeliin"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button x:Name="AloitaPeli" Text="Aloita peli" WidthRequest="150"/>
            <Button x:Name="Tilasto" Text="Tilastot" WidthRequest="150" />
            <Button x:Name="LopetaPeli" Text="Lopeta peli" WidthRequest="150"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
